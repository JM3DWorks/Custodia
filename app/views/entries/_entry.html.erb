<li id="entry-<%= entry.id %>">
  <span class="timestamp">Work Date: <%= entry.date %></span>
  <span class="content"><%= entry.content %></span>
  <% if entry.mileage.present? %>
    Odo*: <%= entry.mileage %>
  <% end %>
  <% if entry.primary_hours.present? && @equipment.primary_hours_label.present? %>
    <span class="primaryhours"><%= @equipment.primary_hours_label %>: <%= entry.primary_hours %></span>
  <% end %>
  <% if entry.secondary_hours.present? && @equipment.secondary_hours_label.present? %>
    <span class="secondaryhours"><%= @equipment.secondary_hours_label %>: <%= entry.secondary_hours %></span>
  <% end %>
  <span class="employee"><%= entry.employee %></span>
  <%= image_tag entry.picture.url if entry.picture? %>
  <% if current_user.admin? %>
    <br />
<span class="delete-button">
  <%= link_to 'Delete', equipment_entry_path(@equipment, entry), method: :delete,
                                     data: { confirm: 'Are you sure?' } %>
</span>
|
<% end %>
<span class="edit-button">
  <%= link_to 'Edit', edit_equipment_entry_path(@equipment, entry) %>
</span>
</li>
